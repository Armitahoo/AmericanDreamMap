import folium
from folium.features import GeoJsonTooltip

# Create a folium map
m = folium.Map(location=[20, 0], zoom_start=2)

# Define hyperlinks for each region
region_links = {
    'North America': '<a href="https://example.com/north-america" target="_blank">North America Info</a>',
    'Mexico and Central America': '<a href="https://example.com/mexico-central" target="_blank">Mexico & Central America Info</a>',
    'South America': '<a href="https://example.com/south-america" target="_blank">South America Info</a>',
    'West Europe': '<a href="https://example.com/west-europe" target="_blank">West Europe Info</a>',
    'East Europe': '<a href="https://example.com/east-europe" target="_blank">East Europe Info</a>',
    'Russia': '<a href="https://example.com/russia" target="_blank">Russia Info</a>',
    'Central Asia': '<a href="https://example.com/central-asia" target="_blank">Central Asia Info</a>',
    'MENA': '<a href="https://example.com/mena" target="_blank">MENA Info</a>',
    'South Asia': '<a href="https://example.com/south-asia" target="_blank">South Asia Info</a>',
    'East Asia': '<a href="https://example.com/east-asia" target="_blank">East Asia Info</a>',
    'Oceania': '<a href="https://example.com/oceania" target="_blank">Oceania Info</a>',
    'Southern Africa': '<a href="https://example.com/southern-africa" target="_blank">Southern Africa Info</a>'
}

# Function to create popups
def popup_text(region):
    return folium.Popup(region_links[region], max_width=250)

# Add GeoJson layers for each region
for region, data in world_filtered.groupby('region'):
    geojson = GeoJson(data, 
                      tooltip=GeoJsonTooltip(fields=['name']),
                      popup=popup_text(region))
    geojson.add_to(m)

# Save the map
m.save("interactive_map.html")

